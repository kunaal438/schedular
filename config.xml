<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    xmlns:android = "http://schemas.android.com/apk/res/android" 
    id          = "com.ludo_star_offline.kunaal"
    versionCode = "29" 
    version     = "1.1.9" > <!-- value bigger than 1.0.1 and verCode bigger than 11 -->

<!-- versionCode is optional and Android only -->

  <name>Ludo Star offline</name>
  <icon src="assests/img/icon.png" width="180" height="180" />

  <preference name="Orientation" value='portrait'></preference>
  <preference name="Fullscreen" value="true" />

  <description>
    collect some happy moments. play ludo wihout any tension
  </description>
  <preference name="android-build-tool" value="gradle" />
  <preference name="android-targetSdkVersion" value="28" />
  <preference name="android-installLocation" value="auto" />
  <preference name="android-windowSoftInputMode" value="adjustResize" />

  <gap:config-file platform="android" parent="/manifest">  
    <supports-screens   android:xlargeScreens="true"   android:largeScreens="true"   android:smallScreens="true" />  
    <application android:theme="@android:style/Theme.NoTitleBar" >  
      <activity android:theme="@android:style/Theme.NoTitleBar.Fullscreen" ></activity>  
    </application>
  </gap:config-file>

  <gap:plugin name="com.admob.plugin" source="npm" />
  <gap:plugin name="cordova-plugin-local-notification" source="npm"/>
  <gap:plugin name="cordova-plugin-inappbrowser" source="npm"/>
  <gap:plugin name="cordova-plugin-whitelist" source="npm"/>

  <plugin name="cordova-plugin-splashscreen" source="npm" />
  
  <preference name="SplashScreen" value="splash"/>
  <preference name="SplashScreenDelay" value="4000" />
  
  <preference name="SplashShowOnlyFirstTime" value="false" />
  <preference name="SplashMaintainAspectRatio" value="true" />
  <preference name="AutoHideSplashScreen" value="true" />
  <preference name="FadeSplashScreenDuration" value="0"/>
  <preference name="ShowSplashScreenSpinner" value="false"/>
  
  <gap:splash platform="android" qualifier="port-ldpi" src="assests/img/image.png" />
  <gap:splash platform="android" qualifier="port-mdpi" src="assests/img/image.png" />
  <gap:splash platform="android" qualifier="port-hdpi" src="assests/img/image.png" />
  <gap:splash platform="android" qualifier="port-xhdpi" src="assests/img/image.png" />

  <gap:splash src="splash.png" />

  <access origin="*" />
  <allow-navigation href="*" />
  <allow-intent href="*" />

  <!-- <gap:plugin name="cordova.plugin.local-notification" /> -->
  
  <author href="https://build.phonegap.com" email="kunaal438@gmail.com">
    kunaal kumar    
  </author>

</widget>